{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false  // Add this line to allow implicit any types
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "src/tests/**/*"]  // Update to exclude test files
}

