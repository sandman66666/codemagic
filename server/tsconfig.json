{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,        // Change from true to false
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noEmitOnError": false  // Add this line to emit JavaScript even with errors
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "src/tests/**/*"]
}
